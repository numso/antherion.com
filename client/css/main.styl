#mainPage
  padding-top: 115px
  background: #fff;
  background: -moz-linear-gradient(right, #000, #fff);
  background: -webkit-gradient(linear, right top, left top, from(#000), to(#fff));

  .title
    font-size: 30px
    padding-left: 50px
    text-decoration: underline
    font-weight: bold

  .app
    display: inline-block
    vertical-align: top
    margin: 15px
    cursor: pointer
    transition: all 0.2s ease

    img
      border-radius: 15px
      margin: 20px

    .caption
      color: #fff
      font-size: 28px
      text-align: center
      margin-bottom: 30px
      width: 240px

    &:hover
      margin: 0
      padding: 15px

.about-page,
.contact-page
  min-height: 100%

  .header
    margin-top: 100px
    margin-left: 30px
    font-size: 50px

  .desc
    margin-left: 60px
    margin-top: 15px
    font-size: 20px
    width: 400px
